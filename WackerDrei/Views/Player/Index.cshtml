@model IEnumerable<WackerDrei.Models.Player>

@{
    ViewBag.Title = "Spieler";
}

@Html.ActionLink("Neuen Spieler hinzufügen", "Create", new { }, new { @class = "btn btn-light", style = "margin: 2% 2% 2% 1%" })

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <img class="card-img-top" alt="Thumbnail [100%X250]" style="height: 250px; width: 100%; display: block" src="~/Content/test.jpg" />
                <div class="card-body">
                    <div class="card-text">
                        <p>This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>